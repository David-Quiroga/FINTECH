<link rel="stylesheet" href="/css/registro.css">

<body>
    <section id="container">
        <header>Registrate</header>
        <center>¿Ya tienes una cuenta? <a href="/login">Inicia Sesion</a></center>
        <form action="" method="POST" id="form">
            <div id="input-box">
                <label>Nombres:</label>
                <input type="text" name="nombres_Dueño" placeholder="Ingresa tus nombres completos" required />
            </div>
            <div id="input-box">
                <label>Apellidos:</label>
                <input type="text" name="apellidos_Dueño" placeholder="Ingresa tus apellidos completos" required />
            </div>
            <div id="input-box">
                <label>Contraseña:</label>
                <input type="password" name="password_Dueño" placeholder="Ingrese una contraseña" required />
            </div>
            <div id="input-box">
                <label>Correo Electronico:</label>
                <input type="email"  name="correo_electronico_Dueño" placeholder="ejemplo@gmail.com" required />
            </div>
            <div id="column">
                <div id="input-box">
                    <label>Celular:</label>
                    <input type="number" name="celular_Dueño" placeholder="099860898" required />
                </div>
                <div id="input-box">
                    <label>Cedula:</label>
                    <input type="number" name="cedula_Dueño" placeholder="*******" required />
                </div>
            </div>
            <button>Guardar</button>
        </form>
    </section>
</body>